---
// Features index page - lists all features
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { getCollection } from "astro:content";

const allFeatures = await getCollection("features");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-48 pb-16 lg:pt-82">
      <Text
        tag="h1"
        variant="displayLG"
        class="text-base-800 text-balance"
      >
        Fluvial Platform Features
      </Text>

      <div class="mt-8 max-w-3xl">
        <div class="rounded-lg bg-blue-50 border border-blue-200 p-6">
          <Text tag="p" variant="textLG" class="text-blue-900">
            Fluvial transforms how organizations create, deploy, and analyze complex assessments. Whether you're conducting due diligence, compliance reviews, vendor evaluations, or risk assessments, our platform provides the capabilities that enterprise teams need to manage mission-critical questionnaire processes.
          </Text>
        </div>
      </div>

      <div class="mt-12">
        <Text tag="h2" variant="displaySM" class="text-base-800">
          Core Platform Capabilities
        </Text>

        <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2">
          {
            allFeatures.map((feature) => (
              <article class="group">
                <a
                  href={`/features/${feature.slug}`}
                  class="block rounded-lg border border-base-200 p-6 transition hover:border-base-300 hover:shadow-md h-full"
                >
                  <Text tag="h3" variant="textXL" class="font-semibold text-base-900">
                    {feature.data.title}
                  </Text>
                  {feature.data.description && (
                    <Text tag="p" variant="textBase" class="mt-3 text-base-600 leading-relaxed">
                      {feature.data.description}
                    </Text>
                  )}
                  <Text tag="span" variant="textSM" class="mt-4 inline-block text-blue-600 group-hover:text-blue-700">
                    Learn more â†’
                  </Text>
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
