---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
const pricingPlans = [
  {
    name: "Team",
    price: "$49/m",
    period: "per month",
    description: "Built for growing teams that mean business.",
    features: [
      {
        title: "5 Workspaces",
        detail:
          "Run up to five separate team spaces, each with its own projects, permissions, and workflows.",
      },
      {
        title: "Advanced Analytics",
        detail:
          "Unlock deep insights with team performance dashboards, usage metrics, and CSV-exportable reports.",
      },
      {
        title: "Real-Time Collaboration",
        detail:
          "Work together seamlessly on tasks and documents, with live cursors, in-app chat, and threaded comments.",
      },
      {
        title: "Priority Support",
        detail:
          "Get 24/7 access to our help desk plus a dedicated Slack channel and monthly check-in calls.",
      },
    ],
    Link: {
      label: "Start free trial",
      href: "/forms/signup",
      variant: "default",
    },
  },
  {
    name: "Enterprise",
    price: "Let's talk",
    period: "Custom pricing",
    description: "For serious teams who want it all (and then some).",
    features: [
      {
        title: "Unlimited Workspaces",
        detail:
          "Create as many workspaces as you need—perfect for enterprises, agencies, or global teams.",
      },
      {
        title: "Advanced Security",
        detail:
          "Enforce SAML SSO, SCIM user provisioning, end-to-end encryption, and detailed audit logs.",
      },
      {
        title: "Dedicated Account Manager",
        detail:
          "Work with your own CSM who knows your business, helps onboard your team, and drives your success.",
      },
      {
        title: "Custom Integrations",
        detail:
          "Leverage our open API, webhooks, and Zapier connector to plug Alfred into any bespoke workflow.",
      },
    ],
    Link: { label: "Contact us", href: "/forms/contact", variant: "muted" },
  },
];
// Components
import CustomerEntry1 from "@/components/customers/CustomerEntry1.astro";
// Sections
import Faq from "@/components/helpcenter/Faq.astro";
// Content
import { getCollection } from "astro:content";
const allCustomers = (await getCollection("customers")).sort((a, b) =>
  a.data.customer.localeCompare(b.data.customer)
);
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-48 pb-8 lg:pt-82">
      <Text
        tag="h1"
        variant="displayLG"
        class="max-w-xl mt-8 text-base-800 text-balance"
      >
        Pick a plan, freeloaders welcome
      </Text>

      <Text
        tag="p"
        variant="textBase"
        class="max-w-md mt-4 text-base-500 text-balance"
      >
        Decide how much you’re willing to pay to look like you have your life
        together.
      </Text>

      <div
        class="grid grid-cols-1 gap-8 md:grid-cols-2 pt-8 mt-8 border-t border-base-200"
      >
        {
          pricingPlans.map((plan) => (
            <div class="flex flex-col justify-between h-full gap-8 p-8 lg:p-20 bg-base-50">
              <div>
                <div>
                  <Text
                    tag="h3"
                    variant="displaySM"
                    class="text-base-800 font-medium"
                  >
                    {plan.name}
                  </Text>
                  <Text tag="p" variant="textBase" class="mt-2 text-base-500">
                    {plan.description}
                  </Text>
                  <Text
                    tag="p"
                    variant="textXL"
                    class="mt-6 font-medium text-base-900"
                  >
                    {plan.price}
                  </Text>
                  <Text tag="p" variant="textSM" class="text-base-500">
                    {plan.period}
                  </Text>
                </div>

                <ul class="mt-6 space-y-4 text-left max-w-sm">
                  {plan.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <ChevronRight size="sm" class="mt-1 shrink-0" />
                      <div>
                        <Text
                          tag="h3"
                          variant="textBase"
                          class="font-medium text-base-800"
                        >
                          {feature.title}
                        </Text>
                        <Text
                          tag="p"
                          variant="textSM"
                          class="text-base-500 mt-1"
                        >
                          {feature.detail}
                        </Text>
                      </div>
                    </li>
                  ))}
                </ul>
              </div>

              <Link
                href={plan.Link.href}
                size="base"
                variant={plan.Link.variant}
                class="w-full mt-8"
              >
                {plan.Link.label}
              </Link>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-12">
      <Text tag="h1" variant="displayLG" class="text-base-800 text-balance">
        Real Customers. Real Results.
      </Text>
      <div class="mt-12">
        {allCustomers.slice(2, 3).map((post) => <CustomerEntry1 post={post} />)}
      </div>
    </Wrapper>
  </section>
  <Faq />
</BaseLayout>
