---
// Solutions index page - lists all solutions
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { getCollection } from "astro:content";

const allSolutions = await getCollection("solutions");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-48 pb-16 lg:pt-82">
      <Text
        tag="h1"
        variant="displayLG"
        class="text-base-800 text-balance"
      >
        Industry Solutions
      </Text>

      <div class="mt-8 max-w-3xl">
        <Text tag="p" variant="textLG" class="text-base-700 leading-relaxed">
          Fluvial adapts to the specific requirements of different industries and business processes. The combination of rich questionnaires, customisable workflows, structured document automation, and comprehensive integration capabilities provides a foundation that organizations configure to their particular needs.
        </Text>
      </div>

      <div class="mt-12">
        <Text tag="h2" variant="displaySM" class="text-base-800">
          Solutions by Industry
        </Text>

        <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2">
          {
            allSolutions.map((solution) => (
              <article class="group">
                <a
                  href={`/solutions/${solution.slug}`}
                  class="block rounded-lg border border-base-200 p-6 transition hover:border-base-300 hover:shadow-md h-full"
                >
                  <Text tag="h3" variant="textXL" class="font-semibold text-base-900">
                    {solution.data.title}
                  </Text>
                  {solution.data.description && (
                    <Text tag="p" variant="textBase" class="mt-3 text-base-600 leading-relaxed">
                      {solution.data.description}
                    </Text>
                  )}
                  <Text tag="span" variant="textSM" class="mt-4 inline-block text-blue-600 group-hover:text-blue-700">
                    Learn more â†’
                  </Text>
                </a>
              </article>
            ))
          }
        </div>

        <div class="mt-12 pt-8 border-t border-base-200">
          <Text tag="p" variant="textBase" class="text-base-600">
            Each solution leverages Fluvial's core capabilities while addressing the specific workflow, approval, and documentation requirements of its respective industry.
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
