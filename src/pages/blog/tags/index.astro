---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
// Tags
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-48 pb-8 lg:pt-82">
      <Text
        tag="h1"
        variant="displayLG"
        class="max-w-xl text-base-800 text-balance"
      >
        All tags available
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-balance text-base-5 00">
        Search around for the tags you are interested in.
      </Text>
      <ul
        role="list"
        class="flex flex-col pt-8 mt-8 border-t gap-2 border-base-200"
      >
        {
          tags.map((tag) => (
            <li class="flex items-center gap-2">
              <ChevronRight size="sm" class="shrink-0" />
              <Text
                tag="a"
                variant="textBase"
                href={`/blog/tags/${tag}`}
                class="capitalize text-base-500  hover:text-base-800"
              >
                {tag}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>
