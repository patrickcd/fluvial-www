---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-48 pb-8">
      <Text
        tag="h1"
        variant="displayLG"
        class="tracking-tight text-base-800 text-balance">Colors</Text
      >

      <div
        class="w-full mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 text-base-400"
      >
        <div class="flex flex-col gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium text-white uppercase">Black and white</Text
          >
          <div class="flex flex-col mt-2 gap-8">
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-white border border-base-300">
              </div>
              <span class="text-xs text-base-500">White </span>
            </div>
            <div class="flex flex-col gap-2">
              <div
                class="h-[4.25rem] w-full bg-gradient-up outline outline-base-900"
              >
              </div>
              <span class="text-xs text-base-500">Gradient up </span>
            </div>
            <div class="flex flex-col gap-2">
              <div
                class="h-[4.25rem] w-full bg-gradient-down outline outline-base-900"
              >
              </div>
              <span class="text-xs text-base-500">Gradient down </span>
            </div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium text-white uppercase">Accent</Text
          >
          <div class="flex flex-col mt-2 gap-8">
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-50"></div>
              <span class="text-xs text-base-500">Accent 50 </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-100"></div>
              <span class="text-xs text-base-500">Accent 100 </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-200"></div>
              <span class="text-xs text-base-500">Accent 200 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-300"></div>
              <span class="text-xs text-base-500">Accent 300 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-400"></div>
              <span class="text-xs text-base-500">Accent 400 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-500"></div>
              <span class="text-xs text-base-500">Accent 500 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-600"></div>
              <span class="text-xs text-base-500">Accent 600 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-700"></div>
              <span class="text-xs text-base-500">Accent 700 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-800"></div>
              <span class="text-xs text-base-500">Accent 800 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-accent-900"></div>
              <span class="text-xs text-base-500">Accent 900 </span>
            </div><div class="flex flex-col gap-2">
              <div
                class="h-[4.25rem] w-full bg-accent-950 outline outline-base-900"
              >
              </div>
              <span class="text-xs text-base-500">Accent 950 </span>
            </div>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium text-white uppercase">Base</Text
          >
          <div class="flex flex-col mt-2 gap-8">
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-50"></div>
              <span class="text-xs text-base-500">Base 50 </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-100"></div>
              <span class="text-xs text-base-500">Base 100 </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-200"></div>
              <span class="text-xs text-base-500">Base 200 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-300"></div>
              <span class="text-xs text-base-500">Base 300 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-400"></div>
              <span class="text-xs text-base-500">Base 400 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-500"></div>
              <span class="text-xs text-base-500">Base 500 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-600"></div>
              <span class="text-xs text-base-500">Base 600 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-700"></div>
              <span class="text-xs text-base-500">Base 700 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-800"></div>
              <span class="text-xs text-base-500">Base 800 </span>
            </div><div class="flex flex-col gap-2">
              <div class="h-[4.25rem] w-full bg-base-900"></div>
              <span class="text-xs text-base-500">Base 900 </span>
            </div><div class="flex flex-col gap-2">
              <div
                class="h-[4.25rem] w-full bg-base-950 outline outline-base-900"
              >
              </div>
              <span class="text-xs text-base-500">Base 950 </span>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
