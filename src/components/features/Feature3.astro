---
// Feature Widgets
import DataWidget from "@/components/featureWidgets/DataWidget.astro";
import ClonesWidget from "@/components/featureWidgets/ClonesWidget.astro";
import TeamWorkWidget from "@/components/featureWidgets/TeamWorkWidget.astro";
import ShortcutsWidget from "@/components/featureWidgets/ShortcutsWidget.astro";
import IntegrationsWidget from "@/components/featureWidgets/IntegrationsWidget.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="py-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4 md:items-end">
      <div>
        <Text
          tag="h2"
          variant="displaySM"
          class="font-medium tracking-tight text-base-800 text-balance"
        >
          Integrated Document Automation
        </Text>
      </div>
      <Text
        tag="p"
        variant="textLG"
        class="mt-4 text-base-600 lg:text-balance md:col-span-2 md:col-start-3"
      >
        Transform questionnaire data into persistent vendor profiles, compliance reports, and reference documents. Build organizational knowledge that compounds in value with complete audit trails and bidirectional mappings.
      </Text>
    </div>
    <div class="mt-12 grid grid-cols-1 gap-8 lg:grid-cols-6">
      <div
        class="relative p-4 overflow-hidden bg-teal-100 lg:col-span-3 lg:p-12"
      >
        <div class="relative flex flex-col justify-start h-full">
          <div>
            <Text tag="h3" variant="textXL" class="font-medium text-teal-950">
              Structured Content Management
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="mt-2 text-base-600 text-balance"
            >
              Store documents as JSON data with JSON Schema validation and JSON Patch audit trails. Map questionnaire responses to document fields with reusable templates.
            </Text>
          </div>
          <div class="relative mt-12 -mr-16">
            <DataWidget />
          </div>
        </div>
      </div>
      <div
        class="relative p-4 overflow-hidden lg:col-span-3 lg:p-12 bg-purple-50"
      >
        <div class="relative flex flex-col justify-start h-full">
          <div>
            <Text tag="h3" variant="textXL" class="font-medium text-purple-900"
              >Multi-Client Architecture
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="mt-2 text-base-600 text-balance"
            >
              Advisory firms can isolate client data within one deployment. Each client engagement operates independently with separate permissions, workflows, and branding.
            </Text>
          </div>
          <div class="relative mt-12 -mr-16">
            <TeamWorkWidget />
          </div>
        </div>
      </div>
            <div class="relative p-4 overflow-hidden lg:col-span-2 lg:p-8 bg-blue-50">
        <div class="relative flex flex-col justify-start h-full">
          <div>
            <Text tag="h3" variant="textXL" class="font-medium text-blue-900">
              Template Libraries
            </Text>
            <Text tag="p" variant="textLG" class="mt-2 text-base-600">
              Reuse proven questionnaires and workflows across projects. Build organizational knowledge bases of assessment frameworks and best practices.
            </Text>
          </div>
          <div class="relative mt-12 -mr-16">
            <ClonesWidget />
          </div>
        </div>
      </div>
      <div class="relative p-4 overflow-hidden lg:col-span-2 lg:p-8 bg-rose-50">
        <div class="relative flex flex-col justify-start h-full">
          <div>
            <Text tag="h3" variant="textXL" class="font-medium text-rose-900">
              Audit Trails
            </Text>
            <Text tag="p" variant="textLG" class="mt-2 text-base-600">
              Complete history of who answered what, when responses were approved, and how risk ratings changedâ€”for regulatory compliance and defensible decisions.
            </Text>
          </div>
      <div
        class="relative p-4 overflow-hidden lg:col-span-2 lg:p-8 bg-yellow-50"
      >
        <div class="relative flex flex-col justify-start h-full">
          <div>
            <Text tag="h3" variant="textXL" class="font-medium text-yellow-900">
              API-First Integration
            </Text>
            <Text tag="p" variant="textLG" class="mt-2 text-base-600">
              Complete REST APIs with OpenAPI specs, webhook notifications, and CEL-powered automation. Connect to CRM, document repositories, and risk intelligence platforms.
            </Text>
          </div>
          <div class="relative mt-12 -mr-16">
            <IntegrationsWidget />
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
