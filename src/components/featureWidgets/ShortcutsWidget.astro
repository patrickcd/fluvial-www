---
// Icons
import Point from "@/components/fundations/icons/Point.astro";
import Shift from "@/components/fundations/icons/Shift.astro";
import World from "@/components/fundations/icons/World.astro";
import Option from "@/components/fundations/icons/Option.astro";
import Section from "@/components/fundations/icons/Section.astro";
import Command from "@/components/fundations/icons/Command.astro";
import ChevronUp from "@/components/fundations/icons/ChevronUp.astro";
import ArrowLines from "@/components/fundations/icons/ArrowLines.astro";
import ArrowBarRight from "@/components/fundations/icons/ArrowBarRight.astro";
---

<div class="flex flex-col mx-auto gap-1 group">
  <div class="flex w-full gap-1">
    <button
      class="w-16 p-2 text-sm font-medium text-left bg-white rounded ring ring-transparent text-base-500"
      ><div class="-mt-2">esc</div></button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white w-16">F1</button>
    <button class="text-[0.65rem] p-2 rounded bg-white w-16">F2</button>
    <button class="text-[0.65rem] p-2 rounded bg-white w-16">F3</button>
    <button class="text-[0.65rem] p-2 rounded bg-white w-16">F4</button>
    <button class="text-[0.65rem] p-2 rounded bg-white w-16">F5</button>
  </div>

  <div class="flex items-center gap-1">
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square w-15 p-2 rounded bg-white"
    >
      <span>°</span>
      <span>§</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>!</span>
      <span>1</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>"</span>
      <span>2</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>#</span>
      <span>3</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>€</span>
      <span>4</span></button
    >
    <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>%</span>
      <span>5</span></button
    >
     <button
      class="text-[0.65rem] flex flex-col justify-between aspect-square p-2 rounded bg-white w-15"
    >
      <span>&</span>
      <span>6</span></button
    >
  </div>

  <div class="flex w-full gap-1">
    <button class="text-[0.65rem] p-2 py-4.5 rounded bg-white w-24">
      <ArrowBarRight class="mr-auto size-3" />
    </button>
    <button
      class="text-[0.65rem] p-2 rounded bg-white aspect-square ring ring-transparent group-hover:ring-rose-500 group-hover:text-rose-500 duration-300 w-15"
      >Q</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >W</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >E</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >R</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >T</button
    >
  </div>

  <div class="flex w-full gap-1">
    <button
      class="text-[0.65rem] p-2 flex flex-col gap-2 justify-between rounded bg-white text-left w-30"
    >
      <Point class="size-2 text-base-200 group-hover:text-green-500" />
      <ArrowLines class="mr-auto size-3" />
    </button>
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >A</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >S</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >D</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >F</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >G</button
    >
  </div>

  <div class="flex w-full gap-1">
    <button
      class="text-[0.65rem] p-2 rounded flex flex-col justify-end items-end bg-white ring ring-transparent group-hover:ring-rose-500 group-hover:text-rose-500 duration-300 text-base-500 text-left w-20"
    >
      <Shift class="mt-auto mr-auto size-3" />
    </button>
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >Z</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >X</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >C</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >V</button
    >
    <button class="text-[0.65rem] p-2 rounded bg-white aspect-square w-15"
      >B</button
    >
  </div>

  <div class="flex w-full gap-1">
    <button
      class="text-[0.65rem] flex flex-col gap-2 justify-between p-2 rounded bg-white shrink-0 aspect-square w-15"
    >
      <span class="ml-auto">fn</span>
      <World class="mr-auto size-3" />
    </button>
    <button
      class="text-[0.65rem] flex flex-col gap-2 justify-between text-right p-2 rounded bg-white aspect-square w-15 shrink-0"
    >
      <ChevronUp class="ml-auto size-4" />
      <span>control</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col gap-2 justify-between text-right p-2 rounded bg-white aspect-square w-15 shrink-0"
    >
      <Option class="ml-auto size-3" />
      <span>option</span>
    </button>
    <button
      class="text-[0.65rem] flex flex-col gap-2 justify-between text-right p-2 rounded bg-white ring ring-transparent group-hover:ring-rose-500 group-hover:text-rose-500 duration-300 text-base-500 aspect-square w-15 shrink-0"
    >
      <Command class="ml-auto size-3" />
      <span>command</span>
    </button>
    <button class="text-[0.65rem] p-2 rounded bg-white w-16 px-32">Space</button
    >
  </div>
</div>
