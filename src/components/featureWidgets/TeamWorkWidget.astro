---
// Icons
import Eye from "@/components/fundations/icons/Eye.astro";
import Api from "@/components/fundations/icons/Api.astro";
import Check from "@/components/fundations/icons/Check.astro";
import Circle from "@/components/fundations/icons/Circle.astro";
import CircleDot from "@/components/fundations/icons/CircleDot.astro";
---

<div class="p-8 bg-white  space-y-8">
  <!-- Progress bar + avatars -->
  <div>
    <div class="flex items-center justify-between mb-2">
      <p class="text-sm font-medium text-base-600">Project Progress</p>
      <span class="text-sm text-base-500">72%</span>
    </div>
    <div class="w-full h-2 overflow-hidden rounded-full bg-base-100">
      <div class="h-full bg-purple-400 w-[72%]"></div>
    </div>
  </div>

  <!-- Activity Feed -->
  <div class="space-y-3">
    <div class="flex items-center gap-3">
      <Check class="size-4" />

      <p class="text-sm text-base-500">
        <span class="font-medium text-base-950">Taylor</span> marked <span
          class="font-medium text-base-950">Onboarding flow</span
        > as complete
      </p>
    </div>
    <div class="flex items-start gap-3">
      <Api class="size-4" />

      <p class="text-sm text-base-500">
        <span class="font-medium text-base-950">Dev team</span> updated <span
          class="font-medium text-base-950">API docs</span
        >
      </p>
    </div>
    <div class="flex items-start gap-3">
      <Eye class="size-4" />
      <p class="text-sm text-base-500">
        <span class="font-medium text-base-950">Alex</span> is reviewing <span
          class="font-medium text-base-950">final assets</span
        >
      </p>
    </div>
  </div>

  <!-- Checklist / Timeline -->
  <div class="pt-4 mt-4 border-t space-y-3 border-base-200">
    <div class="flex items-center gap-3">
      <Check class="size-4" />
      <p class="text-sm text-base-500">Kickoff Meeting</p>
    </div>
    <div class="flex items-center gap-3">
      <CircleDot class="size-4" />
      <p class="text-sm text-base-500">Prototype Testing</p>
    </div>
    <div class="flex items-center gap-3">
      <Circle class="size-4" />
      <p class="text-sm text-base-500">Final Review</p>
    </div>
  </div>
</div>
